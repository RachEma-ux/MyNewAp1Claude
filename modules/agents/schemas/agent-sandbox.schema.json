{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sandbox Agent Specification",
  "description": "MVA (Minimum Viable Anatomy) for experimental agents",
  "type": "object",
  "additionalProperties": false,
  "required": ["mode", "agent", "local_constraints", "sandbox_constraints"],
  "properties": {
    "mode": {
      "type": "string",
      "const": "sandbox"
    },
    "agent": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "version", "description", "role_class", "anatomy"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "description": {
          "type": "string",
          "minLength": 1,
          "maxLength": 500
        },
        "role_class": {
          "type": "string",
          "enum": ["compliance", "analysis", "ideation"]
        },
        "anatomy": {
          "type": "object",
          "additionalProperties": false,
          "required": ["reasoning", "inputs", "actions", "memory"],
          "properties": {
            "reasoning": {
              "type": "object",
              "additionalProperties": false,
              "required": ["type", "model", "temperature"],
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["llm", "rules", "hybrid"]
                },
                "model": {
                  "type": "string",
                  "minLength": 1
                },
                "temperature": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                }
              }
            },
            "inputs": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string"
              }
            },
            "actions": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["type", "side_effects"],
                "properties": {
                  "type": {
                    "type": "string"
                  },
                  "side_effects": {
                    "type": "boolean"
                  }
                }
              }
            },
            "memory": {
              "type": "object",
              "additionalProperties": false,
              "required": ["short_term", "long_term"],
              "properties": {
                "short_term": {
                  "type": "boolean"
                },
                "long_term": {
                  "type": "boolean"
                }
              }
            }
          }
        }
      }
    },
    "local_constraints": {
      "type": "object",
      "additionalProperties": false,
      "required": ["max_steps"],
      "properties": {
        "max_steps": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100
        }
      }
    },
    "sandbox_constraints": {
      "type": "object",
      "additionalProperties": false,
      "required": ["external_calls", "persistent_writes", "max_cost_usd", "auto_expiry_hours"],
      "properties": {
        "external_calls": {
          "type": "boolean",
          "const": false
        },
        "persistent_writes": {
          "type": "boolean",
          "const": false
        },
        "max_cost_usd": {
          "type": "number",
          "minimum": 0,
          "maximum": 10
        },
        "auto_expiry_hours": {
          "type": "integer",
          "minimum": 1,
          "maximum": 168
        }
      }
    }
  }
}
